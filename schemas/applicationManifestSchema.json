{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "uuid": {
      "type": "string",
      "format": "uuid",
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$",
      "title": "Уникальный идентификатор приложения в формате uuid v4"
    },
    "entry": {
      "type": "string",
      "title": "Имя файла в который будет собрано приложение",
      "description": "Если не задан, то будет сгенерирован application.[contenthash].js",
      "pattern": "\\w+\\.js$",
      "examples": ["index.js", "main.js"]
    },
    "name": {
      "type": "object",
      "title": "Локализованное имя приложения",
      "required": ["ru", "en"],
      "properties": {
        "en": {
          "type": "string",
          "minLength": 1
        },
        "ru": {
          "type": "string",
          "minLength": 1
        }
      }
    }
  },
  "required": ["uuid", "name"]
}
